<%= form_tag sessions_path, :class=>'simple_form form-inline navbar-form pull-right' do %>
    
      <%= label_tag :email, 'Email or Mobile' %>

      
        <%= text_field_tag :email, params[:email] %>
      
      <%= label_tag :password, 'Password'%>
      
        <%= password_field_tag :password, params[:password], :type=>'password', :class => "input-small" %>
      

    
      <%= submit_tag "Log in", :class=>'btn' %>
      
<% end %>